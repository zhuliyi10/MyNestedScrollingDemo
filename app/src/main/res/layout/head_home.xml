<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="272dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_head">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="14dp"
            android:background="#1affffff"
            android:layout_width="92dp"
            android:layout_height="92dp"/>
        <View
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="14dp"
            android:background="#1affffff"
            android:layout_width="92dp"
            android:layout_height="92dp"/>
        <View
            android:id="@+id/bg_change"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#1f2eb6"
            android:layout_marginLeft="116dp"
            android:layout_marginRight="116dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="92dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_video"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_width="92dp"
            android:layout_height="92dp">
            <ImageView
                android:id="@+id/img_video"
                android:src="@mipmap/icon_video_card"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/txt_video"
                android:textSize="14sp"
                android:text="卡点视频"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_camera"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="92dp">
            <ImageView
                android:id="@+id/img_camera"
                android:src="@mipmap/icon_camera"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/txt_camera"
                android:textSize="14sp"
                android:text="相机"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_image"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="14dp"
            android:layout_width="92dp"
            android:layout_height="92dp">
            <ImageView
                android:id="@+id/img_image"
                android:src="@mipmap/icon_mod_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/txt_image"
                android:textSize="14sp"
                android:text="高清修图"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>